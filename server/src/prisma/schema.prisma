generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  // basic
  id                  String              @id @default(cuid())
  name                String              @db.VarChar(32)
  surname             String              @db.VarChar(32)
  password            String
  email               String              @unique
  active              Boolean             @default(false)
  accountType         AccountType         @default(default)
  // temporary subscriptions to more prestige account type
  subExpiration       DateTime            @default(now())
  // profile
  birthday            DateTime
  description         String              @default("") @db.VarChar(500)
  photos              String[]
  gender              String
  city                String              @default("")
  sexualOrientation   SexualOrientation[]
  // matching
  showMeGender        ShowMeGender
  showMeAgeLowerLimit Int
  showMeAgeUpperLimit Int
  showMeDistance      Int                 @default(50)
  latitude            Float
  longitude           Float
  superlikesLastDates DateTime[]
  // others
  createdAt           DateTime            @default(now())
  // relations
  session             Session[]

  user       Like[] @relation("user")
  judgedUser Like[] @relation("judgedUser")

  firstUser  UsersRelation[] @relation("firstUser")
  secondUser UsersRelation[] @relation("secondUser")
  message    Message[]

  EmailVerification EmailVerification[]
  PasswordReset     PasswordReset[]
  Conversations     Conversation[]
}

enum ShowMeGender {
  Male
  Female
  All
}

enum SexualOrientation {
  Heterosexual
  Gay
  Lesbian
  Bisexual
  Pansexual
  Demisexual
  Asexual
  Queer
  Questioning
}

enum AccountType {
  default
  silver
  gold
  black
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  valid     Boolean  @default(true)
  country   String
  city      String
  userAgent String
  createdAt DateTime @default(now())
  // relations
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Like {
  id           String     @id @default(cuid())
  userId       String
  judgedUserId String     @map("jugdedUserId")
  typeOfLike   TypeOfLike @default(default)
  createdAt    DateTime   @default(now())
  // relations
  user         User       @relation("user", fields: [userId], references: [id], onDelete: Cascade)
  judgedUser   User       @relation("judgedUser", fields: [judgedUserId], references: [id], onDelete: Cascade)
}

enum TypeOfLike {
  default
  super
  notInterested
}

model UsersRelation {
  id           String              @id @default(cuid())
  firstUserId  String
  secondUserId String
  relationType UsersRelationStatus
  updatedAt    DateTime            @updatedAt
  createdAt    DateTime            @default(now())
  // relations
  firstUser    User                @relation("firstUser", fields: [firstUserId], references: [id], onDelete: Cascade)
  secondUser   User                @relation("secondUser", fields: [secondUserId], references: [id], onDelete: Cascade)
}

enum UsersRelationStatus {
  accepted
  rejected
  removed
}

model Conversation {
  id        String    @id @default(cuid())
  name      String    @db.VarChar(70)
  members   User[]
  updatedAt DateTime  @updatedAt
  createdAt DateTime  @default(now())
  // relations
  messages  Message[]
}

model Message {
  id             String       @id @default(cuid())
  content        String
  userId         String
  conversationId String
  type           MessageType
  isDeleted      Boolean      @default(false)
  createdAt      DateTime     @default(now())
  // relations
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum MessageType {
  voice
  photo
  video
  default
  info
}

model EmailVerification {
  id        String   @id @default(cuid())
  userId    String   @unique
  email     String   @unique
  createdAt DateTime @default(now())
  // relations
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model PasswordReset {
  id        String   @id @default(cuid())
  userId    String   @unique
  createdAt DateTime @default(now())
  // relations
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model PremiumAccountToken {
  id             String      @id @default(cuid())
  token          String      @unique
  daysOfValidity Int
  accountType    AccountType
  createdAt      DateTime    @default(now())
}
