{
  "compilerOptions": {
    "target": "es5",
    "outDir": "dist",
    "allowJs": true,
    "module": "esnext",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@upload/*": ["./upload/*"]
    }
  },

  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "isolatedModules": false
    },
    "include": ["src/**/*", "config"],
    "exclude": ["node_modules"]
  }
}
