{
    "compilerOptions": {
        "target": "es2017",
        "module": "es2022",
        "outDir": "dist",
        "allowJs": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true
        // "baseUrl": "./src",
        // "paths": {
        // "@/*": ["src/*"],
        // "@upload/*": ["upload/*"]
        // }
    },

    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS",
            "isolatedModules": false
        },
        "include": ["src/**/*", "public/**/*"],
        "exclude": ["node_modules"]
    }
}
